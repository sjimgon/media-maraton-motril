---
// src/components/ButtonPrimary.astro
const { 
  href = undefined, 
  type = "button", 
  class: additionalClass = '' 
} = Astro.props;

const baseClass = "bg-secundarioMMM-600 text-blancoMMM px-4 py-2 rounded-lg hover:bg-blancoMMM hover:text-secundarioMMM-600 ring-3 transition-colors";

---

{href ? (
  <a 
    href={href} 
    class={`${baseClass} ${additionalClass}`}
  >
    <slot />
  </a>
) : (
  <button 
    type={type} 
    class={`${baseClass} ${additionalClass}`}
  >
    <slot />
  </button>
)}
